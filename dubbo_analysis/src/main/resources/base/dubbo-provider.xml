<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd        http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="provider-app"  />

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="zookeeper://127.0.0.1:2181" />
    <dubbo:config-center address="zookeeper://127.0.0.1:2181" />
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="-1" threadpool="fixed" />
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.yuqiao.deeplearningdubbo.analysis.base.DemoService" ref="demoService" />
    <dubbo:service interface="com.yuqiao.deeplearningdubbo.analysis.base.DemoService2" ref="demoService2" />

    <!-- 和本地bean一样实现服务 -->
    <bean id="demoService" class="com.yuqiao.deeplearningdubbo.analysis.base.DemoServiceImpl" />
    <bean id="demoService2" class="com.yuqiao.deeplearningdubbo.analysis.base.DemoServiceImpl2" />
</beans>
